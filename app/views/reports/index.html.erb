 <div class="container">
  <div class="row">
    <h1>
      List of all reports
    </h1>
  </div>

  <div class="row">
    <table id="reports-datatable" data-source="<%= reports_path(format: :json) %>">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Report</th>
          <th>Location</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to 'New report', new_report_path, class: 'btn btn-primary' %>
  </div>
</div>
